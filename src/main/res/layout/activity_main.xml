<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:scrollbars="horizontal|vertical">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:text="00.00mA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/valueone"
            android:textAlignment="center"
            android:textSize="50sp"
            android:layout_marginTop="70dp"
            android:textColor="@android:color/background_light"
            android:layout_alignParentEnd="true"
            android:textStyle="normal|bold"
            android:textIsSelectable="true"
            android:singleLine="true"
            android:lineSpacingExtra="14sp"
            android:layout_toEndOf="@+id/textView"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="70dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/connectionStatus"
            android:text="Disconnected"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20mA"
            android:id="@+id/sendTwenty"
            android:layout_weight="1"
            android:layout_alignBaseline="@+id/sendTwelve"
            android:layout_alignBottom="@+id/sendTwelve"
            android:layout_alignParentEnd="true"
            android:enabled="false" />

        <TextView
            android:text="20mA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:textSize="24sp"
            android:layout_alignParentEnd="true"
            android:textColor="@android:color/background_light"
            android:layout_marginTop="220dp" />

        <TextView
            android:text="4mA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="220dp"
            android:textColor="@android:color/background_light" />

        <TextView
            android:id="@+id/valueIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0mA"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="220dp" />

            <SeekBar
                android:id="@+id/seekBar1"
                android:layout_width="match_parent"
                android:thumb="@drawable/handthumb"
                android:progressDrawable="@layout/custom_seekbar_layout"
                android:max="16"
                android:layout_height="wrap_content"
                android:layout_below="@+id/valueIn"
                android:layout_alignParentStart="true"
                android:clickable="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect"
            android:id="@+id/connect"
            android:layout_gravity="center_horizontal"
            android:enabled="false"
            android:layout_alignBottom="@+id/dataLayout"
            android:layout_alignParentStart="true"
            android:layout_marginTop="450dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/enableBluetoothButton"
            android:text="Bluetooth OFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scanStatus"
            android:text="status scan"
            android:layout_marginTop="430dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12mA"
            android:id="@+id/sendTwelve"
            android:layout_weight="1"
            android:enabled="false"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@+id/sendFour" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4mA"
            android:id="@+id/sendFour"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="140dp"
            android:enabled="false"
            android:layout_below="@+id/textView6"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/deviceInfo"
            android:layout_below="@+id/seekBar1"
            android:layout_alignParentStart="true"
            android:scrollbars="vertical"
            android:textColor="@android:color/background_light"
            android:layout_height="120dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="scan"
            android:id="@+id/scan"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/connectionStatus" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bluetooth OFF"
            android:id="@+id/disconnect"
            android:layout_gravity="center_horizontal"
            android:enabled="false"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="Close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/sendTwelve"
            android:id="@+id/Exit" />

    </RelativeLayout>
</ScrollView>